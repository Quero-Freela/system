; https://editorconfig.org/

root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
end_of_line = lf

[{*.md,*.markdown}]
trim_trailing_whitespace = false

[{*.yml,*.yaml}]
indent_size = 2

[{*.json,*.jsonc}]
indent_size = 2

[{*.js,*.ts,*.jsx,*.tsx}]
indent_size = 2
